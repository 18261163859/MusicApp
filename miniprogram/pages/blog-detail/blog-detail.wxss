@import "../../global.wxss";

.container{
  margin-bottom: 100rpx;
}

.tab{
  width: 730rpx;
  height: 68rpx;
  background-color: lightgrey;
  font-size: var(--primarySize);
  margin: 0 10rpx;
  display: flex;
  align-items: center;
}

.comment-list{
  display: flex;
  flex-direction: column;
  width: 730rpx;
  margin: 0 10rpx;
  
}
.comment{
  background-color: white;
  margin-bottom: 5rpx;
}

.comment-title{
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.comment-avatar{
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
}

.comment-nickname{
  font-size: var(--primarySize);
  color: var(--primaryColor);
  margin-left: 20rpx;
}

.comment-content{
  font-size: var(--primarySize);
  padding: 10rpx 20rpx;
}

.comment-time{
  font-size: var(--secondarySize);
  color: var(--secondaryColor);
}

.blog-ctrl{
  position: fixed;
  bottom: 0;
  width: 100%;  
}